<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Tiffin</title>
    <link rel="stylesheet" href="/add.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    <form method="post" action="/tiffin/add">
        <div class="container mt-5">
            <div class="card card-custom">
                <div class="card-header bg-primary text-white">
                    <h4>Enter Tiffin Details</h4>
                </div>
                <div class="card-body">
                    <!-- City Input -->
                    <div class="form-group">
                        <label for="name">Tiffin service name</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter name" name="name" required>
                    </div>
    
                    <!-- Location Input -->
                    <div class="form-group">
                        <label for="city">Enter City</label>
                        <input type="text" class="form-control" id="city" placeholder="Enter city" name="city" required>
                    </div>
    
                    <div class="form-group">
                        <label for="location">Enter location</label>
                        <input type="text" class="form-control" id="location" placeholder="Enter location" name="location" required>
                    </div>

    
                    <!-- Occupancy Section -->
                    <div class="form-group">
                        <label>Variety</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="variety" id="veg" value="Veg" required>
                            <label class="form-check-label" for="veg">Veg</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="variety" id="non-veg" value="Non-Veg">
                            <label class="form-check-label" for="non-veg">Non-Veg</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="variety" id="both" value="Both">
                            <label class="form-check-label" for="both">Both</label>
                        </div>
                        
                    </div>
    
                    <!-- Meal Section -->
                    <div class="form-group">
                        <label>Meal</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="meal" id="lunch" value="Lunch" required>
                            <label class="form-check-label" for="lunch">Lunch</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="meal" id="dinner" value="Dinner">
                            <label class="form-check-label" for="dinner">Dinner</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="meal" id="both" value="Both">
                            <label class="form-check-label" for="both">Both</label>
                        </div>
                    </div>
    
                    <!-- delivery Section -->
                    <div class="form-group">
                        <label>Delivery</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="delivery" id="true" value="true" required>
                            <label class="form-check-label" for="true">True</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="delivery" id="false" value="false">
                            <label class="form-check-label" for="false">False</label>
                        </div>
                    </div>
    
                    <!-- Owner Number Input -->
                    <div class="form-group">
                        <label for="owner-number">Owner Contact Number</label>
                        <input type="tel" class="form-control" id="owner-number" placeholder="Enter 10-digit number" pattern="[0-9]{10}" name="contact" required>
                    </div>
    
                    <!-- Image URL Section -->
                    <div class="form-group">
                        <label for="image1">Image  URL</label>
                        <input type="url" class="form-control" id="image1" placeholder="Enter image URL" name="img" required>
                    </div>
    
    <br>
                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </form>
    
</body>
</html>