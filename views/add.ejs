<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/add.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <form method="post" action="/ps/add">
        <div class="container mt-5">
            <div class="card card-custom">
                <div class="card-header bg-primary text-white">
                    <h4>Enter PG Details</h4>
                </div>
                <div class="card-body">
                    <!-- City Input -->
                    <div class="form-group">
                        <label for="city">City</label>
                        <input type="text" class="form-control" id="city" placeholder="Enter city" name="city" required>
                    </div>
    
                    <!-- Location Input -->
                    <div class="form-group">
                        <label for="location">Area</label>
                        <input type="text" class="form-control" id="location" placeholder="Enter location" name="location" required>
                    </div>
    
                    <!-- Budget Input -->
                    <div class="form-group">
                        <label for="budget">Budget</label>
                        <input type="number" class="form-control" id="budget" placeholder="Enter budget" name="budget" required>
                    </div>
    
                    <!-- Occupancy Section -->
                    <div class="form-group">
                        <label>Occupancy</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="occupancy" id="single" value="single" required>
                            <label class="form-check-label" for="single">Single</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="occupancy" id="double" value="double">
                            <label class="form-check-label" for="double">Double</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="occupancy" id="triple" value="triple">
                            <label class="form-check-label" for="triple">Triple</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="occupancy" id="four" value="four">
                            <label class="form-check-label" for="four">Four</label>
                        </div>
                    </div>
    
                    <!-- Available Section -->
                    <div class="form-group">
                        <label>Available For</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="available" id="boys" value="Boys" required>
                            <label class="form-check-label" for="boys">Boys</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="available" id="girls" value="Girls">
                            <label class="form-check-label" for="girls">Girls</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="available" id="family" value="Family">
                            <label class="form-check-label" for="family">Family</label>
                        </div>
                    </div>
    
                    <!-- AC Section -->
                    <div class="form-group">
                        <label>AC Available</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="ac" id="true" value="true" required>
                            <label class="form-check-label" for="true">True</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="ac" id="false" value="false">
                            <label class="form-check-label" for="false">False</label>
                        </div>
                    </div>
    
                    <!-- WiFi Section -->
                    <div class="form-group">
                        <label>WiFi Available</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="wifi" id="true" value="true" required>
                            <label class="form-check-label" for="true">True</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="wifi" id="false" value="false">
                            <label class="form-check-label" for="false">False</label>
                        </div>
                    </div>
    
                    <!-- Owner Number Input -->
                    <div class="form-group">
                        <label for="owner-number">Owner Contact Number</label>
                        <input type="tel" class="form-control" id="owner-number" placeholder="Enter 10-digit number" pattern="[0-9]{10}" name="owner" required>
                    </div>
    
                    <!-- Image URL Section -->
                    <div class="form-group">
                        <label for="image1">Image 1 URL</label>
                        <input type="url" class="form-control" id="image1" placeholder="Enter image URL" name="img1" required>
                    </div>
    
                    <div class="form-group">
                        <label for="image2">Image 2 URL</label>
                        <input type="url" class="form-control" id="image2" placeholder="Enter image URL" name="img2" required>
                    </div>
    
                    <div class="form-group">
                        <label for="image3">Image 3 URL</label>
                        <input type="url" class="form-control" id="image3" placeholder="Enter image URL" name="img3" required>
                    </div>
    
                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </form>
    
</body>
</html>